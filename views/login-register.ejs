<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login or Register</title>
    <style>
        body {
            background-image: url('https://www.teahub.io/photos/full/20-208096_mac-os-sierra-wallpaper-hd.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }

        div.rgb {
            background: rgba(255, 255, 255, 0.7);
        }

        #radius {
            border-radius: 20px;
        }
    </style>
</head>

<body>
    <div class="container py-5">
        <h1 class="text-center mb-5 text-uppercase">Login and register system</h1>
        <div class="row">
            <div class="rgb col-sm-5 py-4" id="radius" style="font-family: PK Krung Thep Medium;">
                <h2 class="text-center">Login</h2>
                <form action="" method="post">
                    <div class="form-group mt-3">
                        <label for="_email">Email</label>
                        <input type="text" name="user_email" class="form-control" style="border-radius: 20px;" placeholder="Email" required>
                    </div>

                    <div class="form-group mt-3">
                        <label for="_pass">Password</label>
                        <input type="password" name="user_pass" class="form-control" style="border-radius: 20px;"  placeholder="Password" required>
                    </div>

                    <% if (locals.login_errors) {
                        login_errors.forEach(function(error_msg) { %>
                        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <%  })
                    } %>

                    <div class="sumbutton">
                        <button type="submit" class="btn btn-primary mt-4"
                            style="display: block; margin-left:auto; margin-right:auto; width:30%;">Login</button>
                    </div>
                </form>
            </div>

            <div class="rgb col-sm-6 border py-3 offset-sm-1" id="radius" style="font-family: PK Krung Thep Medium;">
                <h2 class="text-center">Register</h2>
                <form action="/register" method="post" novalidate>
                    <div class="form-group mt-3">
                        <label for="_name">Name</label>
                        <input type="text" name="user_name" id="_rname" class="form-control" placeholder="Name"
                        style="border-radius: 20px;" value="<%= (locals.old_data) ? old_data.user_name : '' %>" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="_email">Email</label>
                        <input type="email" name="user_email" id="_remail" class="form-control" placeholder="Email"
                        style="border-radius: 20px;" value="<%= (locals.old_data) ? old_data.user_email : '' %>" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="_pass">Password</label>
                        <input type="password" name="user_pass" id="_rpass" class="form-control" placeholder="Password"
                        style="border-radius: 20px;" required>
                    </div>

                    <% if (locals.register_error) {
                        register_error.forEach(function(error_msg) { %>
                        <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                    <%  })
                    } %>
                    
                    <div class="sumbutton">
                        <button type="submit" class="btn btn-success mt-4"
                            style="display: block; margin-left:auto; margin-right:auto; width:30%;">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

</html>